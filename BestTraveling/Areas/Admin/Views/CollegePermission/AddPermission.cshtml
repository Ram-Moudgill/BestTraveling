<!-- @* horiZental Form layout Starting One row with two column merge.... *@ -->
<form method="get">
    <div class="row mainRow m-0">
        <!-- @* First Column Starts *@ -->
        <div class="col-lg-6 col-md-12">
            <div class="form-group row">
                <label for="College" class="col-sm-4 col-form-label p-0 p-sm-3">College</label>
                <input type="text" class="col-sm-5 offset-sm-2 col-form-label form-control" id="College" readonly disabled />
            </div>

            <div class="form-group row">
                <label for="code" class="col-sm-4 col-form-labe  p-0 p-sm-3">
                    Code
                </label>
                <input type="text" class="col-sm-5 offset-sm-2 col-form-label form-control" id="Code" readonly disabled />
            </div>

            <div class="form-group row">
                <label for="Address" class="col-sm-4 col-form-label  p-0 p-sm-3">
                    Address
                </label>
                <input type="text" class="col-sm-5 offset-sm-2 col-form-label form-control" id="Address" readonly disabled />
            </div>

            <div class="form-group row">
                <label for="city" class="col-sm-4 col-form-label  p-0 p-sm-3">
                    City
                </label>
                <input type="text" class="col-sm-5 offset-sm-2 col-form-label form-control" id="city" readonly disabled />
            </div>

            <div class="form-group row">
                <label for="state" class="col-sm-4 col-form-label  p-0 p-sm-3">
                    State
                </label>
                <input type="text" class="col-sm-5 offset-sm-2 col-form-label form-control" id="state" readonly disabled />
            </div>
        </div>

        <!-- Second Column -->
        <div class="col-lg-6">
            <div class="form-group row">
                <label for="Nos" class="col-sm-4 col-form-label  p-0 p-sm-3">Number of Students</label>
                <input type="text" class="col-sm-5 offset-sm-2 col-form-label form-control" id="Nos" readonly disabled />
            </div>
            <div class="form-group row">
                <label for="branches" class="col-sm-4 col-form-label  p-0 p-sm-3">
                    Branches
                </label>
                <input type="text" class="col-sm-5 offset-sm-2 col-form-label form-control" id="branches" readonly disabled />
            </div>
            <div class="form-group row">
                <label for="phone" class="col-sm-4 col-form-label  p-0 p-sm-3">
                    Phone
