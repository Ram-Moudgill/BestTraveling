@model BT_Model.AdminModel.OfficeModel
@{
    ViewBag.Title = "AddOffice";
    Layout = "~/Views/Shared/BT_Layout.cshtml";
    var countries = ViewBag.Countries;
    var states = ViewBag.States;
    var cities = ViewBag.Cities;
    var districts = ViewBag.Districts;
}
<script>
    $(document).ready(function () {
        $('#grd_office').DataTable({
            searching: false,
            paging: false,
            scrollX: true
        });
    });
</script>
<header>
    <div class="row p-1 mr-0">
        <div class="col-md-6 col-6">
            <span><b>Office</b></span>
        </div>
        <div class="col-md-6 col-6 text-right pr-5">
            <a href="#"><i class="fa fa-arrow-circle-left"></i></a>
        </div>
    </div>
</header>
@using(Ajax.BeginForm("AddOffice","Office",new AjaxOptions {OnSuccess="",OnFailure="" },new { @class = "form-group" }))
{ 
    <div class="row mainRow mx-5">
        <div class="col-lg-12 mt-5">
            <div class="row div-shadow py-5">
                <div class=" col-xl-4">
                    <div class="form-group row">
                        <label for="name" class="col-sm-5 col-form-label">Name</label>
                        <div class="col-sm-7">
                            @Html.TextBoxFor(x=>x.Name,new { @class="form-control"})
                            @Html.ValidationMessageFor(x=>x.Name,string.Empty,new { @class="text-danger"})
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="code" class="col-sm-5 col-form-label">Code</label>
                        <div class="col-sm-7">
                          @Html.TextBoxFor(x=>x.Code,new { @class="form-control"})
                            @Html.ValidationMessageFor(x=>x.Code,string.Empty,new { @class="text-danger"})
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="country" class="col-sm-5 col-form-label">Country</label>
                        <div class="col-sm-7">
                            @Html.DropDownListFor(x=>x.CountryId,new SelectList(countries,"Value","Text","--select country--"),new { @class="form-control"})
                            @Html.ValidationMessageFor(x=>x.CountryId,string.Empty,new { @class="text-danger"})
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="state" class="col-sm-5 col-form-label">State</label>
                        <div class="col-sm-7">
                            @Html.DropDownListFor(x=>x.StateId,new SelectList(states,"Value","Text","--select state--"),new { @class="form-control"})
                            @Html.ValidationMessageFor(x=>x.StateId,string.Empty,new { @class="text-danger"})
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="district" class="col-sm-5 col-form-label">District</label>
                        <div class="col-sm-7">
                            @Html.DropDownListFor(x=>x.DistrictId,new SelectList(districts,"Value","Text","--select district--"),new { @class="form-control"})
                            @Html.ValidationMessageFor(x=>x.DistrictId,string.Empty,new { @class="text-danger"})
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="city" class="col-sm-5 col-form-label">City</label>
                        <div class="col-sm-7">
                            @Html.DropDownListFor(x=>x.CityId,new SelectList(cities,"Value","Text","--select city--"),new { @class="form-control"})
                            @Html.ValidationMessageFor(x=>x.CityId,string.Empty,new {@class="text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 mt-1">
                    <div class="form-group row">
                        <label for="address1" class="col-sm-5 col-form-label">
                            Address1
                        </label>
                        <div class="col-sm-7">
                            @Html.TextAreaFor(x=>x.AddressModel.Address1)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="address2" class="col-sm-5 col-form-label">
                            Address2
                        </label>
                        <div class="col-sm-7">
                            @Html.TextAreaFor(x => x.AddressModel.Address2)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="address3" class="col-sm-5 col-form-label">
                            Address3
                        </label>
                        <div class="col-sm-7">
                            @Html.TextAreaFor(x => x.AddressModel.Address3)
                        </div>
                    </div>
                </div>
                <div class="col-xl-4">
                    <div class="AddBtn d-flex justify-content-end mb-3 mr-3">
                        <button type="button" id="btn_AddCity" class="btn btn-primary px-3">Add</button>
                    </div>

                    <div class="container table-responsive">
                        <table id="grd_office" class="table table-bordered table-striped" style="width:100%">
                            <thead class="table-head-bg" style="width:100%;">
                                <tr>
                                    <th>Name</th>
                                    <th>Position</th>
                                    <th>Office</th>
                                    <th>Age</th>
                                    <th>Salary</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Tiger Nixon</td>
                                    <td>System Architect</td>
                                    <td>Edinburgh</td>
                                    <td>61</td>
                                    <td>$320,800</td>
                                </tr>
                                <tr>
                                    <td>Garrett Winters</td>
                                    <td>Accountant</td>
                                    <td>Tokyo</td>
                                    <td>63</td>
                                    <td>$170,750</td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                    <div class="col-md-12 text-right mt-4 pl-0">
                        <button class="btn-primary  btn2 my-2" id="btn_SaveOffice" type="submit">Save</button>
                        <button class="btn-primary btn2 my-2" id="btn_CloseOffice">Close</button>
                    </div>
                    <div class="modal fade" id="modal_AddCity" tabindex="-1" role="dialog" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header modal-pop-bg">
                                    <h5 class="modal-title">Add City</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}