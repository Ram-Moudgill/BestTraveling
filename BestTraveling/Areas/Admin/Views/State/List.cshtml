
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/BT_Layout.cshtml";
}

<header>
    <div class="row p-1 mr-0">
        <div class="col-md-6 col-6">
            <span><b>State</b></span>
        </div>
        <div class="col-md-6 col-6 text-right">
            <i class="fa fa-arrow-left"></i>
        </div>
    </div>
</header>
<div class="AddBtn d-flex justify-content-end mr-5 my-4">
    <button type="button" id="btn_AddState" class="btn btn-primary px-3">Add</button>
</div>



<div class="container-fluid">
    <table id="grd_State" class="table table-bordered table-striped" style="width:100%">
        <thead class="table-head-bg">
            <tr>
                <th>Name</th>
                <th>Code</th>
                @*<th>Active</th>*@
                <th>Country</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>


<!-- Add State Modal -->
<div class="modal  fade" id="modal_AddState" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header modal-pop-bg">
                <h5 class="modal-title" id="exampleModalLabel">Add State</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div>

                </div>
            </div>
        </div>
    </div>
</div>

<!--- Update State Model-->
<div class="modal fade" id="modal_UpdateState" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header modal-pop-bg">
                <h5 class="modal-title">Update State</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

            </div>
        </div>
    </div>
</div>





<script src="@Url.Content("~/Scripts/View js/Admin/State/StateList.js")" type="text/javascript"></script>